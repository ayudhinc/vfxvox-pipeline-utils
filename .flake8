[flake8]
# Configuration for flake8 linting

# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    docs

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # E402: module level import not at top of file (sometimes needed)
    E402

# Maximum complexity
max-complexity = 15

# Show source code for errors
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True

# Per-file ignores
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401,F403
    # Test files can have unused imports and long lines
    tests/*:F401,F403,E501
    # CLI files can have long lines for help text
    vfxvox_pipeline_utils/cli/*:E501
